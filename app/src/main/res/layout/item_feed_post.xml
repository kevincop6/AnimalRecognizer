<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="16dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="0dp"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ================= HEADER ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgUser"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:clipToOutline="true"
                android:background="@drawable/bg_avatar_circle"
                android:contentDescription="@string/imagen_usuario"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_user_placeholder" />

            <TextView
                android:id="@+id/tvUser"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                tools:text="usuario"
                android:clipToOutline="true"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btnOptions"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_more"
                app:tint="@color/text_secondary" />
        </LinearLayout>

        <!-- ================= IMAGEN ================= -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="280dp">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/pagerImages"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_button_image" />

            <!-- CONTADOR 1/7 -->
            <TextView
                android:id="@+id/tvImageCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="12dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                tools:text="1/7"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_image_counter"
                android:visibility="gone" />

        </FrameLayout>

        <!-- ================= ACTIONS ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:paddingTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnLike"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_like_outline"
                app:tint="@color/text_primary" />

            <ImageView
                android:id="@+id/btnComment"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_comment"
                app:tint="@color/text_primary" />


        </LinearLayout>

        <!-- ================= LIKES ================= -->
        <TextView
            android:id="@+id/tvLikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            tools:text="0 Me gusta"
            android:textColor="@color/text_primary"
            android:textSize="13sp"
            android:textStyle="bold" />

        <!-- ================= DESCRIPTION ================= -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/text_primary"
            android:textSize="13sp"
            android:maxLines="3"
            android:ellipsize="end" />

        <!-- ================= COMMENTS ================= -->
        <TextView
            android:id="@+id/tvComments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="@string/ver_comentarios"
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />

        <!-- ================= DATE ================= -->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            tools:text="Hace 2 dÃ­as"
            android:textColor="@color/text_secondary"
            android:textSize="11sp"
            android:paddingBottom="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
