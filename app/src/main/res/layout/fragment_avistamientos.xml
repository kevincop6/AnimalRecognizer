<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- BIENVENIDA -->
        <TextView
            android:id="@+id/bienvenidoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bienvenido"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1F2933"
            android:layout_marginBottom="12dp"/>

        <!-- BUSCADOR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_search_field"
            android:padding="12dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_search"
                app:tint="#6B7280"
                android:contentDescription="@string/busqueda"
                android:layout_gravity="center_vertical"/>

            <EditText
                android:id="@+id/searchView_avistamientos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@android:color/transparent"
                android:hint="@string/buscar"
                android:focusable="false"
                android:clickable="true"
                android:textSize="16sp"
                android:textColor="#1F2933"
                android:textColorHint="#6B7280"
                android:minHeight="48dp"/>
        </LinearLayout>

        <!-- ANIMALES POPULARES -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/listado_animales"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1F2933"
            android:layout_marginBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_animals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingEnd="8dp"
            android:layout_marginBottom="24dp"/>

        <!-- BLOQUE RECONOCIMIENTO (REDISEÑADO) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reconocer_animales"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1F2933"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:id="@+id/recognitionBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="16dp">

            <!-- Imagen seleccionada -->
            <ImageView
                android:id="@+id/selectedImageView"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@drawable/perezoso_animado"
                android:contentDescription="@string/perezoso_animado"/>

            <!-- BOTÓN DROPDOWN -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/recognitionMenuButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="Reconocer animal"
                android:textColor="@android:color/white"
                app:backgroundTint="#6CD8BC"
                app:icon="@drawable/ic_expand_more_24px"
                app:iconGravity="textEnd"
                app:cornerRadius="24dp"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
